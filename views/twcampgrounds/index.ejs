<% layout('layouts/boilerplate') %>
  <link rel="stylesheet" href="./stylesheets/index.css">

  <div id="map" style="width:100%;height:500px"></div>
  <div class="container">
    <h1>All Campgrounds</h1>
    <div>
      <a href="/twcampgrounds/new">Add Campground</a>
    </div>
    <div class="row">
      <% for (let campground of campgrounds) {%>
        <div class="col-4">
          <div class="card mb-4">
            <% if(campground.images.length){ %>
              <img class="card-img-top img-fluid" style="height:250px" src="<%= campground.images[0].url %> " alt="">
              <% }else{ %>
                <img class="card-img-top img-fluid"
                  src="https://res.cloudinary.com/a62262002/image/upload/v1615858007/TWcamp/cbg2xrplsxwqjqdq1ghg.jpg"
                  alt="">
                <% } %>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= campground.title %>
                    </h5>
                    <p class="card-text">
                      <%= campground.description %>
                    </p>
                    <p class="card-text">
                      <small class="text-muted">
                        <%= campground.location %>
                      </small>
                    </p>
                    <a class="btn btn-primary" href="/twcampgrounds/<%= campground._id %> ">
                      View</a>
                  </div>
          </div>
        </div>

        <% } %>
    </div>
  </div>

  <script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
  </script>

  <script src="/javascripts/clusterMap.js"></script>